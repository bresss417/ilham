<body>
    <div class="login-form">
        <div id="logo">
            <h1>Login Form</h1>
        </div>
        <form action="auth" method="POST" class="log-rigth">
            <input type="text" name="name_node" placeholder="Username" required>
            <input type="password" name="passwd_node" placeholder="Password" required>
            <button type="submit" class="btn1"><b>login</b></button>

        </form>
        <!--
        <button onclick="document.getElementById('riges').style.display='block'" class="button-regis">
          go to regist
        </button>
